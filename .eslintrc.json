{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [],
  "rules": {
    "@next/next/no-img-element": "off"
  },
  "overrides": [
    {
      "files": ["scripts/**/*.js", "*.config.js", "*.config.mjs"],
      "env": {
        "node": true
      },
      "extends": ["eslint:recommended"],
      "rules": {
        "no-console": "off",
        "no-undef": "off"
      }
    }
  ]
}
